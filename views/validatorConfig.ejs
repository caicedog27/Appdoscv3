<!-- views/validatorConfig.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
</head>
<body>
  <div class="container mt-4">
    <h1><%= title %></h1>

    <form action="/inventarios/validador/config/save" method="POST" class="mt-3">
      <div class="mb-3">
        <label for="min" class="form-label">Stock Mínimo</label>
        <input 
          type="number" 
          class="form-control" 
          id="min" 
          name="min" 
          value="<%= thresholds.min %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="mid" class="form-label">Stock Medio</label>
        <input 
          type="number" 
          class="form-control" 
          id="mid" 
          name="mid"
          value="<%= thresholds.mid %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="max" class="form-label">Stock Máximo</label>
        <input 
          type="number" 
          class="form-control" 
          id="max" 
          name="max"
          value="<%= thresholds.max %>"
          required
        />
      </div>
      <button type="submit" class="btn btn-success">Guardar</button>
      <a href="/inventarios/validador" class="btn btn-secondary">Cancelar</a>
    </form>
  </div>

  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">
  </script>
</body>
</html>
