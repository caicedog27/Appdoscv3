<header class="mb-4">
    <h1 class="display-5">Configuración de Perfil</h1>
  </header>
  <main>
    <form action="/perfil/save" method="POST">
      <label for="nombre">Nombre de la Empresa:</label>
      <input type="text" id="nombre" name="nombre" required class="form-control mb-3" />
  
      <label for="direccion">Dirección:</label>
      <input type="text" id="direccion" name="direccion" required class="form-control mb-3" />
  
      <label for="telefono">Teléfono:</label>
      <input type="text" id="telefono" name="telefono" required class="form-control mb-3" />
  
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required class="form-control mb-3" />
  
      <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
  </main>
  