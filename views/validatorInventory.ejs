<!-- views/validatorInventory.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    .container { margin-top: 20px; }
    .status-red { background-color: #f8d7da; }
    .status-yellow { background-color: #fff3cd; }
    .status-green { background-color: #d4edda; }
    .status-blue { background-color: #cce5ff; }
    th { background-color: #343a40; color: #fff; }
  </style>
</head>
<body>
  <div class="container">
    <h1><%= title %></h1>
    
    <% if (products && products.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>CÃ³digo</th>
              <th>Nombre</th>
              <th>Cantidad</th>
              <th>Min</th>
              <th>Mid</th>
              <th>Max</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(prod => {
                let rowClass = '';
                if (prod.color === 'red') rowClass = 'status-red';
                else if (prod.color === 'yellow') rowClass = 'status-yellow';
                else if (prod.color === 'green') rowClass = 'status-green';
                else if (prod.color === 'blue') rowClass = 'status-blue';
            %>
              <tr class="<%= rowClass %>">
                <td><%= prod.code %></td>
                <td><%= prod.name %></td>
                <td><%= prod.available_quantity %></td>
                <td><%= prod.min %></td>
                <td><%= prod.mid %></td>
                <td><%= prod.max %></td>
                <td>
                  <a 
                    href="/inventarios/validador/product/<%= prod.code %>" 
                    class="btn btn-sm btn-info"
                  >
                    Configurar
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <p class="mt-3">Total productos: <%= products.length %></p>
    <% } else { %>
      <p>No hay productos.</p>
    <% } %>
  </div>

  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">
  </script>
</body>
</html>
