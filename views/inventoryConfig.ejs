<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .header-title {
            text-align: center;
            margin: 20px 0;
            font-size: 2rem;
            font-weight: bold;
        }
        .table-container {
            margin-bottom: 40px;
        }
        .table-title {
            text-align: center;
            font-size: 1.5rem;
            font-weight: bold;
            margin: 20px 0;
        }
        .inventory-table {
            width: 100%;
            border: 1px solid #dee2e6;
        }
        .inventory-table th, .inventory-table td {
            padding: 10px;
            text-align: center;
            border: 1px solid #dee2e6;
        }
        .inventory-table th {
            background-color: #343a40;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="header-title"><%= title %></h1>

        <% for (const [brand, tableRows] of Object.entries(organizedTables)) { %>
            <div class="table-container">
                <p class="table-title"><%= brand %></p>
                <table class="inventory-table">
                    <thead>
                        <tr>
                            <th>Presentaci√≥n</th>
                            <% for (const flavor of Object.keys(tableRows[Object.keys(tableRows)[0]])) { %>
                                <th><%= flavor %></th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (const [presentation, flavors] of Object.entries(tableRows)) { %>
                            <tr>
                                <td><%= presentation %></td>
                                <% for (const quantity of Object.values(flavors)) { %>
                                    <td><%= quantity %></td>
                                <% } %>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</body>
</html>
